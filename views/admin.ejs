<%- include('partials/header') %>

<div class="container mt-5 login">
    <h1>Patient Details</h1>

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">

                    <!-- Makes POST request to /login route -->
                    <form action="/upload" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" class="form-control" name="patientId" pattern="\d{6}" placeholder="Patient ID" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="rName" placeholder="Patient Name" required>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="rEmail" placeholder="Patient Email" required>
                        </div>
                        <div class="form-group">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="customFile" name="pReport" required>
                                <label class="custom-file-label" for="customFile">Choose file</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-dark">Upload</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>

<%- include('partials/footer') %>
